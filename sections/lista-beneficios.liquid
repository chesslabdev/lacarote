{% schema %}
  {
    "name": "Lista de Benefícios",
    "tag": "section",
    "class": "lista-beneficio", 
    "settings": [
    ], 
    "presets": 
    [
      {
        "name": "Lista de Benefícios" 
      }
    ]
  }
{% endschema %}


{% assign imagens_beneficio = product.metafields.custom.imagem.value %}
{% if product.metafields.custom.imagem != blank %}
    <div class="bloco-beneficio-container">
      {% for img in imagens_beneficio %}
        {% assign contagem = forloop.index0 %}
        {% if contagem == 1 %}
          <div class="bloco-beneficio-wrapper-inverter">
          {% else %}
          <div class="bloco-beneficio-wrapper">
        {% endif %}
          <div class="bloco-beneficio-img">
            <img src="{{ img | image_url }}">
          </div>
          <div class="bloco-beneficio">
            <h3>{{ product.metafields.custom.headline.value[contagem] }}</h3>
            <p>{{ product.metafields.custom.texto.value[contagem] }}</p>
          </div>
        </div>
      {% endfor %}
    </div> 
{% endif %}

<style>
    .lista-beneficio {
        background-color: #FFFFFF;
    }

  .bloco-beneficio-container * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  .bloco-beneficio-container {
    display: flex;
    flex-direction: column;
    gap: 48px;
    padding: 50px 32px;
    @media (max-width: 767px) {
        padding: 32px 16px;
    }
  }
  .bloco-beneficio-wrapper, .beneficio-banner {
    display: flex;
    max-width: 1100px;
    margin: auto;
    border-radius: 8px;
    overflow: hidden;
  }
  .bloco-beneficio-wrapper-inverter {
    display: flex;
    flex-direction: row-reverse;
    max-width: 1100px;
    margin: auto;
    border-radius: 8px;
    overflow: hidden;
  }
  .bloco-beneficio-img {
    width: 50%;
    height: 300px;
    overflow: hidden;
    & img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
  .bloco-beneficio {
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 32px;
    gap: 24px;
    background-color: #fff;
    & h3 {
      color: #4D4D4D;
      font-size: 24px;
      font-weight: 600;
    }
    & p {
      color: #4D4D4D;
      font-size: 16px;
      font-weight: 400;
    }
  }
  @media (max-width: 749px) {
    .bloco-beneficio-container {
      gap: 0;
      margin: 32px 0;
    }
    .bloco-beneficio-wrapper, .bloco-beneficio-wrapper-inverter {
      flex-direction: column;
    }
    .bloco-beneficio-img, .bloco-beneficio {
      width: 100%;
      max-width: 440px;
    }
  }
</style> 