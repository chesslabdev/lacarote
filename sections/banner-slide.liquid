{% assign fancy_text_color_1 = settings.fancy_text_color_1 %}
{% assign fancy_text_color_2 = settings.fancy_text_color_2 %}
{% assign fancy_text_gradient = settings.fancy_text_gradient %}

<style>
  .fancy-1 { color: {{ fancy_text_color_1 }}; }
  .fancy-2 { color: {{ fancy_text_color_2 }}; }
  .fancy-gradient {
    background: {{ fancy_text_gradient }};
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
  }
  .fancy-bg-1 {
    background-color: {{ fancy_text_color_1 }};
    padding: 2px 6px;
    border-radius: 3px;
    display: inline-block;
  }
  .fancy-bg-2 {
    background-color: {{ fancy_text_color_2 }};
    padding: 2px 6px;
    border-radius: 3px;
    display: inline-block;
  }
  .fancy-bg-gradient {
    background: {{ fancy_text_gradient }};
    padding: 2px 6px;
    border-radius: 3px;
    display: inline-block;
  }
</style>

