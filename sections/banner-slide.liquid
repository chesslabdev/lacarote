          position: absolute;
          display: flex;
          flex-direction: column;
          align-items: {{ block.settings.alinhamento_desktop }};
          top: {{ block.settings.top_percent_desktop }}%;
          left: {{ block.settings.right_percent_desktop }}%;
          padding-left: {{ block.settings.padding_lateral_desktop }}px;
          padding-right: {{ block.settings.padding_lateral_desktop }}px;
          text-align: {{ block.settings.alinhamento_desktop | replace: 'flex-start', 'left' | replace: 'flex-end', 'right' }};
          z-index: 10;
          max-width: {{ block.settings.largura_percent_desktop }}%;
        }
        .banner-{{ block.id }} .headline {
          color: {{ block.settings.headline_color }};
          font-size: {{ block.settings.tamanho_head_desktop }}px;
          font-weight: {{ block.settings.peso_head_desktop }};
        }
        .banner-{{ block.id }} .subheadline {
          margin-top: {{ block.settings.espaco_top_desktop }}px;
          color: {{ block.settings.subheadline_color }};
          font-size: {{ block.settings.tamanho_subhead_desktop }}px;
          font-weight: {{ block.settings.peso_subhead_desktop }};
        }
        .banner-{{ block.id }} .cta {
          margin-top: {{ block.settings.cta_top_desktop }}px;
        }
        .banner-{{ block.id }} .botao-cta {
          background-color: {{ block.settings.botao_cor_fundo }};
          border: 1px solid {{ block.settings.botao_cor_borda }};
          border-radius: {{ block.settings.botao_raio_borda }}px;
          color: {{ block.settings.botao_cor_texto }};
          font-weight: bold;
          font-size: {{ block.settings.botao_tamanho_fonte }}px;
          padding: {{ block.settings.botao_padding_vertical }}px {{ block.settings.botao_padding_horizontal }}px;
          display: inline-block;
          text-align: center;
          text-decoration: none;
          transition: all ease .4s;
        }
        .banner-{{ block.id }} .botao-cta:hover {
          background-color: {{ block.settings.botao_cor_fundo | color_modify: 'alpha', 1.5 }};
          box-shadow:
            0px 0px 15px {{ block.settings.botao_cor_fundo | color_modify: 'alpha', 0.3 }},
            0px 0px 4px {{ block.settings.botao_cor_fundo | color_modify: 'alpha', 0.3 }};
        }


        @media (max-width: 749px) {
          .banner-{{ block.id }} .headline {
            font-size: {{ block.settings.tamanho_head_mobile }}px;
            font-weight: {{ block.settings.peso_head_mobile }};
          }
          .banner-{{ block.id }} .subheadline {
            margin-top: {{ block.settings.espaco_top_mobile }}px;
            font-size: {{ block.settings.tamanho_subhead_mobile }}px;
            font-weight: {{ block.settings.peso_subhead_mobile }};
          }
          .banner-{{ block.id }} .cta {
            margin-top: {{ block.settings.cta_top_mobile }}px;
          }
          .banner-{{ block.id }} {
            align-items: {{ block.settings.alinhamento_mobile }};
            top: {{ block.settings.top_percent_mobile }}%;
            right: {{ block.settings.right_percent_mobile }}%;
            padding-left: {{ block.settings.padding_lateral_mobile }}px;
            padding-right: {{ block.settings.padding_lateral_mobile }}px;
            text-align: {{ block.settings.alinhamento_mobile | replace: 'flex-start', 'left' | replace: 'flex-end', 'right' }};
            max-width: {{ block.settings.largura_percent_mobile }}%;
          }
        }
      </style>

      {% assign link_destino = block.settings.bannerlink %}
      {% if block.type == 'video' %}
        {% assign link_destino = block.settings.video_link %}
      {% endif %}

      {% if block.settings.ativar_link_banner %}
        <a class="banner-bloco swiper-slide" href="{{ link_destino }}">
      {% else %}
        <div class="banner-bloco swiper-slide">
      {% endif %}
      {% if block.type == 'imagem' %}
        <picture>
          <source media="(min-width: 768px)" srcset="{{ block.settings.imagem_desktop | img_url: 'master' }}">
          <source media="(max-width: 767px)" srcset="{{ block.settings.imagem_mobile | img_url: 'master' }}">
          <img src="{{ block.settings.imagem_desktop | img_url: 'master'}}" alt="" aria-hidden="true">
        </picture>
      {% elsif block.type == 'video' %}
        {% if block.settings.video_url_mobile != blank %}
          <video autoplay muted loop playsinline class="banner-video banner-video-desktop">
            <source src="{{ block.settings.video_url }}" type="video/mp4">
          </video>
          <video autoplay muted loop playsinline class="banner-video banner-video-mobile">
            <source src="{{ block.settings.video_url_mobile }}" type="video/mp4">
          </video>
          <style>
            @media (min-width: 768px) {
              .banner-video-mobile { display: none; }
            }
            @media (max-width: 767px) {
              .banner-video-desktop { display: none; }
            }
          </style>
        {% else %}
          <video autoplay muted loop playsinline class="banner-video">
            <source src="{{ block.settings.video_url }}" type="video/mp4">
          </video>
        {% endif %}
      {% endif %}

      <div class="banner-{{ block.id }}">
        {% if block.settings.headline != blank %}
          {% assign texto = block.settings.headline
            | replace: '[[', '<span class="fancy-1">'
            | replace: ']]', '</span>'
            | replace: '((', '<span class="fancy-2">'
            | replace: '))', '</span>'
            | replace: '//', '<span class="fancy-gradient">'
            | replace: '\\', '</span>'
            | replace: '{{', '<span class="fancy-bg-1">'
            | replace: '}}', '</span>'
            | replace: '<<', '<span class="fancy-bg-2">'
            | replace: '>>', '</span>'
            | replace: '%%', '<span class="fancy-bg-gradient">'
            | replace: '||', '</span>'
          %}
          <h1 class="headline">{{ texto | raw }}</h1>
        {% endif %}
        {% if block.settings.subheadline != blank %}
          {% assign texto_sub = block.settings.subheadline
            | replace: '[[', '<span class="fancy-1">'
            | replace: ']]', '</span>'
            | replace: '((', '<span class="fancy-2">'
            | replace: '))', '</span>'
            | replace: '//', '<span class="fancy-gradient">'
            | replace: '\\', '</span>'
            | replace: '{{', '<span class="fancy-bg-1">'
            | replace: '}}', '</span>'
            | replace: '<<', '<span class="fancy-bg-2">'
            | replace: '>>', '</span>'
            | replace: '%%', '<span class="fancy-bg-gradient">'
            | replace: '||', '</span>'
          %}
          <div class="subheadline">{{ texto_sub | raw }}</div>
        {% endif %}
        {% if block.settings.exibir_cta %}
          <div class="cta">
            <a href="{{ block.settings.link_cta }}" class="botao-cta">{{ block.settings.texto_cta }}</a>
          </div>
        {% endif %}
      </div>
      {% if block.settings.ativar_link_banner %}
        </a>
      {% else %}
        </div>
      {% endif %}
    {% endfor %}

    <div class="swiper-pagination" id="banner-bloco-pagination"></div>
  </div>
</div>

<script src="{{ 'banner-slide.js' | asset_url }}" defer></script>
