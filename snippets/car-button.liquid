{%- doc -%}
  Renders a car button icon.

  @param {string} [tag] - The tag to use (default: 'button')
  @param {string} [href] - The URL to link to (if tag is 'a')
  @param {string} [class] - Additional classes to add to the tag
  @param {string} [attributes] - Additional attributes to add to the tag

  @example
  {% render 'car-button', tag: 'a', href: '/pages/delivery', class: 'custom-class' %}
{%- enddoc -%}

{%- assign tag = tag | default: 'button' -%}
<{{ tag }}
  class="car-button header-actions__action{% if class != blank %} {{ class | strip }}{% endif %}"
  aria-label="Delivery"
  {%- if href and tag == 'a' -%}
    href="{{ href }}"
  {%- endif -%}
  {{ attributes }}
>
  <span
    class="car-button__icon svg-wrapper"
    aria-hidden="true"
  >
    {{- 'icon-car.svg' | inline_asset_content -}}
  </span>
</{{ tag }}>

{% stylesheet %}
  .car-button {
    color: var(--color-foreground);
    appearance: none;
    border: none;
    background: none;
    height: var(--button-size);
    width: var(--button-size);
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-content: center;
    transition: color var(--animation-speed) var(--animation-easing);
    text-decoration: none;
  }

  .car-button:hover {
    color: var(--color-foreground);
  }

  .car-button__icon {
    height: var(--button-size);
    width: var(--button-size);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .car-button__icon svg {
    width: var(--icon-size-md);
    height: var(--icon-size-md);
  }
{% endstylesheet %}